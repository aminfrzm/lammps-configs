/* solve equation of motion for two SPH atoms */

Lx: 1e-3;
/* h: 6.5e-5; */
h: 1.0;
xcenter: 0.5*Lx;

w(r):=(1+3*r/h)*(1-r/h)^3;
dw(r):=''(diff(w(r), r));

plot2d([w(r), dw(r)], [r, 0, h]);

s: integrate(2*%pi*r*w(r), r, 0, h), numer;
1/s;

/* 3D */
s: integrate(4*%pi*r^2*w(r), r, 0, 1), numer;
1/s;

