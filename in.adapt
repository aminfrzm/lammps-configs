# adopt a FENE R0 parameter to a given value
echo     both

variable    pmass index 1.0
units       si
atom_style  bond
atom_modify map array sort 0 0

read_data       adapt.data

bond_style      fene
special_bonds 	lj 1 1 1
variable        H_fene equal 10.0
variable        r0_fene equal 1.0
bond_coeff	1 ${H_fene} ${r0_fene} 0.0 0.0

fix	        1 all nve
neighbor	5.0 bin
neigh_modify    delay 0 every 1
timestep        0.0001

run 10000
variable dxpos equal x[2]-x[1]
print "dx(t=1) = ${dxpos}"
