# move two atoms with DPD
include in.minsetup
comm_modify    vel yes

create_atoms 1 single 5.0 5.0 5.0 units box
create_atoms 1 single 5.5 5.0 5.0 units box
group           scd id 2
velocity        scd set 1 0 0 units box


variable        T equal 0.0
variable        cutoff equal 1.0
variable        gamma  equal 1.0
variable        adpd equal 0.0

pair_style	dpd ${T} ${cutoff} 928948
pair_coeff	* * ${adpd} ${gamma} 1.0

fix	        1 all nve
neighbor	5.0 bin
neigh_modify    delay 0 every 1

timestep        0.1
run             10
variable dxpos equal x[2]-x[1]
variable dvpos equal vx[2]-vx[1]
variable f1    equal fx[1]

print "f1(t_end) = ${f1}"
print "dx(t_end) = ${dxpos}"
print "dv(t_end) = ${dvpos}"
